# Server Configuration
PORT=3001
NODE_ENV=production
PUBLIC_URL=https://justtype.io

# Security
JWT_SECRET=generate-with-openssl-rand-base64-32

# Backblaze B2 Storage
B2_APPLICATION_KEY_ID=your-b2-key-id
B2_APPLICATION_KEY=your-b2-application-key
B2_BUCKET_ID=your-bucket-id
B2_BUCKET_NAME=justtype-slates

# Email (Resend)
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=noreply@justtype.io

# Admin (Required for /holyfuckwhereami access)
# Generate bcrypt hash: node -e "console.log(require('bcrypt').hashSync('your-password-here', 10))"
ADMIN_PASSWORD=$2b$10$examplehashhere
